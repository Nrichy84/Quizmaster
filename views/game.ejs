function fmt(n){ return Math.round(n); }

/* ================================
   J√ÅT√âKOSOK ELHELYEZ√âSE OV√ÅLISON
   ================================ */
function renderPlayers(){
  // t√∂r√∂lj√ºk az el≈ëz≈ë player bubikat
  [...$table.querySelectorAll('.player')].forEach(n=>n.remove());

  const W = $table.clientWidth, H = $table.clientHeight;
  const cx = W/2, cy = H/2;
  const rx = W/2 - 70;      // ov√°lis v√≠zszintes sug√°r (padding figyelembe v√©ve)
  const ry = H/2 - 40;      // ov√°lis f√ºgg≈ëleges sug√°r

  const N = players.length;
  for(let i=0;i<N;i++){
    const p = players[i];
    const angle = (2*Math.PI*i/N) - Math.PI/2; // fel√ºlr≈ël indulunk
    const x = cx + rx*Math.cos(angle);
    const y = cy + ry*Math.sin(angle);

    const div = document.createElement('div');
    div.className = 'player' + (p.active?'':' out') + (p.id===1?' me':'');
    div.style.left = (x-36)+'px';
    div.style.top  = (y-36)+'px';
    div.dataset.pid = p.id;
    div.innerHTML = `<div class="name">${p.name}</div><div class="pts">${fmt(p.points)}</div>`;
    $table.appendChild(div);
  }
}

/* ================================
   K√âRD√âS BET√ñLT√âSE
   ================================= */
function loadQuestion() {
  console.log("üåÄ loadQuestion() megh√≠vva");

  // ha m√°r csak 1 akt√≠v van, itt se h√∫zzunk √∫j k√©rd√©st
  const activePlayers = players.filter(p => p.active);
  if (activePlayers.length <= 1) {
    console.log("üèÅ J√°t√©k v√©ge (loadQuestion elej√©n)");
    stopRoundTimer();
    setTimeout(() => {
      calculateFinalPrizes();
    }, 300);
    return;
  }

  // ha elfogytak a k√©rd√©sek, induljon el√∂lr≈ël
  if (currentQ >= questions.length) currentQ = 0;

  const q = questions[currentQ];
  $question.textContent = q.q;

  // v√°laszgombok
  $answers.innerHTML = '';
  q.a.forEach((label, idx) => {
    const btn = document.createElement('button');
    btn.className = 'answer-btn';
    btn.textContent = label;
    btn.onclick = () => submitAnswer(idx);
    $answers.appendChild(btn);
  });
  setButtonsEnabled(true);
  answering = true;

  // reset answers
  players.forEach(p => p.answer = null);

  // 15 mp-es k√∂rid≈ë
  timer = 15;
  $timer.textContent = timer;
  stopRoundTimer();
  tInterval = setInterval(() => {
    timer--;
    $timer.textContent = timer;
    if (timer <= 0) {
      submitAnswer(null);  // nem v√°laszolt
    }
  }, 1000);

  $roundMsg.textContent = '';
  renderPlayers();
  updateInfo();
}

/* ================================
   V√ÅLASZ BEK√úLD√âSE + K√ñR LEFUT
   ================================= */
async function submitAnswer(myAnswerIndex) {
  if (!answering) return;
  answering = false;
  setButtonsEnabled(false);
  stopRoundTimer();

  const q = questions[currentQ];

  // TE
  const me = players.find(p => p.id === 1);
  me.answer = myAnswerIndex;

  // BOTOK
  players.forEach(p => {
    if (p.active && p.id !== 1) {
      const smart = Math.random() < 0.55;
      p.answer = smart ? q.correct : Math.floor(Math.random() * q.a.length);
    }
  });

  // befizet√©s
  const payMap = new Map();
  players.forEach(p => {
    if (p.active) {
      const pay = Math.min(p.points, stake);
      p.points -= pay;
      if (p.points <= 0) {
        p.points = 0;
        p.active = false;
      }
      if (pay > 0) payMap.set(p.id, pay);
    }
  });

  // anim√°ci√≥ befel√©
  await animateChipsToCenter(payMap);

  // pot n√∂vel√©s
  let added = 0;
  payMap.forEach(v => added += v);
  pot += added;
  updateInfo();

  // helyesek
  const roundWinners = players.filter(p => p.active && p.answer === q.correct);
  const hadWinners = roundWinners.length > 0;

  let share = 0;
  if (hadWinners) {
    share = Math.floor(pot / roundWinners.length);
  }

  // nyertesekhez anim
  if (hadWinners) {
    await animateChipsFromCenterToWinners(roundWinners, share);
    roundWinners.forEach(p => p.points += share);
    pot = pot - share * roundWinners.length;
    updateInfo();
    flashWinners(roundWinners);
    $roundMsg.textContent = "Helyes v√°lasz! Nyerem√©ny kiosztva.";
  } else {
    $roundMsg.textContent = "Senki sem tal√°lta el, a pot bent marad.";
  }

  // helyes gomb megjel√∂l√©se
  const correctIndex = q.correct;
  const correctBtn = $answers.querySelectorAll('button')[correctIndex];
  if (correctBtn) {
    correctBtn.style.background = '#27ae60';
    correctBtn.style.color = '#fff';
    correctBtn.classList.add('flash-correct');
  }

  // ha TE kifogyt√°l a pontb√≥l, ess ki
  if (me.points <= 0) {
    me.active = false;
    console.log(`üíÄ ${me.name} kiesett a j√°t√©kb√≥l`);

    // kies≈ë k√©perny≈ë
    const overlay = document.createElement('div');
    overlay.style.position = 'fixed';
    overlay.style.inset = '0';
    overlay.style.background = 'rgba(0,0,0,0.95)';
    overlay.style.display = 'flex';
    overlay.style.flexDirection = 'column';
    overlay.style.alignItems = 'center';
    overlay.style.justifyContent = 'center';
    overlay.style.color = '#fff';
    overlay.style.fontSize = '1.5rem';
    overlay.style.zIndex = '999';

    const actives = players.filter(p => p.active).sort((a, b) => b.points - a.points);
    const meRank = actives.length + 1;
    const p = document.createElement('p');
    p.textContent = `üíÄ Ki est√©l! Helyez√©sed: ${meRank}/${players.length}`;
    overlay.appendChild(p);

    const backBtn = document.createElement('button');
    backBtn.textContent = 'üè† Vissza a f≈ëoldalra';
    backBtn.style.marginTop = '25px';
    backBtn.style.padding = '10px 25px';
    backBtn.style.border = 'none';
    backBtn.style.borderRadius = '8px';
    backBtn.style.background = '#c0392b';
    backBtn.style.color = '#fff';
    backBtn.onclick = () => window.location.href = '/tournaments';
    overlay.appendChild(backBtn);

    document.body.appendChild(overlay);
  }

  // pont alapj√°n deaktiv√°ljuk azokat, akik elfogytak
  players.forEach(p => {
    if (p.points <= 0) p.active = false;
  });

  console.log("üîÅ Friss√≠tett j√°t√©kos √°llapotok (k√∂r v√©ge):", players);

  // VAN-E M√âG T√ñBB J√ÅT√âKOS?
  const activePlayers = players.filter(p => p.active);
  if (activePlayers.length <= 1) {
    console.log("üèÅ J√°t√©k v√©ge ‚Äì submitAnswer v√©g√©n");
    // kis k√©s√©s, hogy a DOM is friss√ºlj√∂n
    setTimeout(() => {
      calculateFinalPrizes();
    }, 400);
    return;
  }

  // k√∂vetkez≈ë k√©rd√©s
  currentQ++;
  setTimeout(loadQuestion, 1400);
}

