   SZ√úNET FUNKCI√ì ‚Äì 10 perc / √≥ra 50-kor
================================ */
let gamePaused = false;           // üîπ EZ HI√ÅNYZOTT
let breakCountdown = null;        // üîπ EZ HI√ÅNYZOTT
let raiseCountdownInterval = null; // üîπ EZ HI√ÅNYZOTT (ha t√©t dupl√°z√°s visszasz√°ml√°l√≥ van)
let raiseTimerInterval = null;

function pauseGameForBreak(){
  if (gamePaused) return;
  gamePaused = true;
  answering = false;

  // id≈ëz√≠t≈ëk le√°ll√≠t√°sa
  stopRoundTimer();
  if(stakeInterval) clearInterval(stakeInterval);
  if(raiseCountdownInterval) clearInterval(raiseCountdownInterval);
  if (raiseTimerInterval) clearInterval(raiseTimerInterval);

  // gombok tilt√°sa
  document.querySelectorAll("#answers button").forEach(btn => (btn.disabled = true));

  // overlay
  const overlay = document.createElement("div");
  overlay.id = "breakOverlay";
  Object.assign(overlay.style, {
    position: "fixed",
    top: "0",
    left: "0",
    width: "100%",
    height: "100%",
    background: "rgba(0,0,0,0.85)",
    color: "white",
    fontSize: "2rem",
    display: "flex",
    flexDirection: "column",
    justifyContent: "center",
    alignItems: "center",
    zIndex: "9999"
  });

  const resumeText = document.createElement("div");
  const nextHour = (new Date().getHours() + 1) % 24;
  resumeText.textContent = `A j√°t√©k ${String(nextHour).padStart(2,"0")}:00-kor folytat√≥dik.`;
  resumeText.style.marginTop = "10px";
  resumeText.style.fontSize = "1.5rem";

  const timerDisplay = document.createElement("div");
  timerDisplay.id = "breakTimer";
  timerDisplay.style.marginTop = "20px";
  timerDisplay.style.fontSize = "1.3rem";

  overlay.innerHTML = `<div>‚è∏ Sz√ºnet van!</div>`;
  overlay.appendChild(resumeText);
  overlay.appendChild(timerDisplay);
  document.body.appendChild(overlay);

  let remaining = 10 * 60; // 10 perc
  breakCountdown = setInterval(() => {
    remaining--;
    const m = Math.floor(remaining / 60);
    const s = (remaining % 60).toString().padStart(2, "0");
    timerDisplay.textContent = `H√°tral√©v≈ë id≈ë: ${m}:${s}`;
    if (remaining <= 0) {
      clearInterval(breakCountdown);
      resumeGameAfterBreak();
    }
  }, 1000);
}

function resumeGameAfterBreak(){
  document.getElementById("breakOverlay")?.remove();
  gamePaused = false;
  answering = true;

  // gombok enged√©lyez√©se
  document.querySelectorAll("#answers button").forEach(btn => (btn.disabled = false));

  // id≈ëz√≠t≈ëk √∫jraind√≠t√°sa
  startStakeDoubler();
  loadQuestion();
}

// √≥r√°nk√©nt figyelj√ºk a sz√ºnetet (50:00-kor)
document.addEventListener("DOMContentLoaded", () => {
  setInterval(() => {
    const now = new Date();
    if (now.getMinutes() === 7 && now.getSeconds() === 0 && !gamePaused) {
      pauseGameForBreak();
    }
  }, 1000);
});
