// ======== T√âT DUPL√ÅZ√ìD√ÅS + VISSZASZ√ÅML√ÅL√ì ========
let stakeInterval;
let raiseTimer = 180; // 3 perc m√°sodpercben
const raiseTimerEl = document.getElementById('raise-timer');

function updateRaiseTimer() {
  const minutes = Math.floor(raiseTimer / 60);
  const seconds = (raiseTimer % 60).toString().padStart(2, '0');
  if (raiseTimerEl)
    raiseTimerEl.textContent = `K√∂vetkez≈ë t√©t emel√©s: ${minutes}:${seconds}`;
}

function startStakeDoubler() {
  if (stakeInterval) clearInterval(stakeInterval);
  if (gamePaused) return;
  raiseTimer = 180;
  updateRaiseTimer();

  stakeInterval = setInterval(() => {
    // üí∞ T√©t dupl√°z√°s
    stake *= 2;
    updateInfo();

    // üîÅ √öj ciklus visszasz√°ml√°l√≥hoz
    raiseTimer = 180;

    // Villan√°s vizu√°lisan
    if (raiseTimerEl) {
      raiseTimerEl.style.color = '#ff4040';
      setTimeout(() => (raiseTimerEl.style.color = '#ffd700'), 1000);
    }
  }, 3 * 60 * 1000); // 3 percenk√©nt dupl√°z

  // M√°sodpercenk√©nt cs√∂kkentj√ºk a sz√°ml√°l√≥t
  raiseCountdownInterval = setInterval(() => {
    if (raiseTimer > 0) {
      raiseTimer--;
      updateRaiseTimer();
    }
  }, 1000);
}

/* ================================
   NYEREM√âNYEK KIOSZT√ÅSA ‚Äì 10%
   ================================= */
function calculateFinalPrizes() {
  console.log("üí∞ Nyerem√©nyek kisz√°m√≠t√°sa...");

  // üßÆ Pont szerint sorba rendezz√ºk a j√°t√©kosokat
  const ranked = players.sort((a, b) => b.points - a.points);
  const totalPlayers = ranked.length;

  // üíµ Val√≥di nevez√©si d√≠j (nem a stake!)
  const entryFee = 10; // fallback biztons√°g kedv√©√©rt
  const totalPrize = entryFee * totalPlayers;
  console.log(`üíµ Teljes pot: ${totalPrize} zseton (${totalPlayers} j√°t√©kos √ó ${entryFee} nevez√©si d√≠j)`);

  // üèÖ H√°ny j√°t√©kos kapjon nyerem√©nyt (fels≈ë 10%, de legal√°bb 1)
  const prizeCount = Math.max(1, Math.ceil(totalPlayers * 0.1));

  // üìä Nyerem√©nyeloszt√°s ar√°nyosan (1. hely kap legt√∂bbet)
  const sumWeights = (prizeCount * (prizeCount + 1)) / 2;
  const prizeMap = new Map();

  ranked.slice(0, prizeCount).forEach((p, i) => {
    const prize = Math.floor(((prizeCount - i) / sumWeights) * totalPrize);
    prizeMap.set(p.id, prize);
    console.log(`ü•á ${p.name} nyerem√©nye: ${prize} zseton`);
  });

  // üë§ Saj√°t j√°t√©kos √©s nyerem√©ny
  const me = players.find(p => p.id === 1);
  const myPrize = prizeMap.get(me.id) || 0;
  const myRank = ranked.findIndex(p => p.id === me.id) + 1;

  // ‚úÖ API ment√©s (ha van backend)
  fetch("/api/addwinnings", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ name: me.name, amount: myPrize })
  })
  .then(res => res.json())
  .then(data => console.log("üíæ Nyerem√©ny elmentve:", data))
  .catch(err => console.error("‚ùå Hiba a nyerem√©ny ment√©s√©n√©l:", err));

  // üñ•Ô∏è V√©geredm√©ny megjelen√≠t√©se overlay-ben
  const overlay = document.createElement("div");
  overlay.style.position = "fixed";
  overlay.style.inset = "0";
  overlay.style.background = "rgba(0,0,0,0.9)";
  overlay.style.color = "#fff";
  overlay.style.display = "flex";
  overlay.style.flexDirection = "column";
  overlay.style.alignItems = "center";
  overlay.style.justifyContent = "center";
  overlay.style.fontSize = "1.3rem";
  overlay.style.zIndex = "9999";

  overlay.innerHTML = `<h2>üèÜ V√©geredm√©ny</h2>`;

  ranked.slice(0, prizeCount).forEach((p, i) => {
    const medal = i === 0 ? "ü•á" : i === 1 ? "ü•à" : i === 2 ? "ü•â" : "üèÖ";
    const div = document.createElement("div");
    div.textContent = `${medal} ${i + 1}. hely: ${p.name} (${p.points} pont) ‚Äì +${prizeMap.get(p.id) || 0} zseton`;
    overlay.appendChild(div);
  });

  const prizeText = document.createElement("div");
  prizeText.style.marginTop = "20px";
  prizeText.style.fontSize = "1.4rem";
  prizeText.style.fontWeight = "bold";
  prizeText.style.color = myPrize > 0 ? "#FFD700" : "#ccc";
  prizeText.textContent =
    myPrize > 0
      ? `üí∞ Nyerem√©nyed: ${myPrize.toLocaleString()} zseton (üèÖ ${myRank}. hely)`
      : "üòî Sajnos most nem nyert√©l.";
  overlay.appendChild(prizeText);

  const backBtn = document.createElement("button");
  backBtn.textContent = "üè† Vissza a f≈ëoldalra";
  backBtn.style.marginTop = "25px";
  backBtn.style.padding = "10px 20px";
  backBtn.style.background = "#e67e22";
  backBtn.style.border = "none";
  backBtn.style.borderRadius = "8px";
  backBtn.style.cursor = "pointer";
  backBtn.onclick = () => window.location.href = "/";
  overlay.appendChild(backBtn);

  document.body.appendChild(overlay);

  console.log(`‚úÖ V√©geredm√©ny: ${myRank}. hely, nyerem√©ny: ${myPrize} zseton`);
}

